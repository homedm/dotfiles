    let g:go_bin_path = $GOPATH.'/bin'
    " for completion
    exe "set rtp+=".globpath($GOPATH, "src/github.com/nsf/gocode/vim")
    set runtimepath+=$GOPATH/src/github.com/nsf/gocode/vim
endif
" }}}

" ### plugin ### {{{
" vim-plug {{{
" automated install vim-plug
