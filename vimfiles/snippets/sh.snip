snippet     option
abbr        get options
options     head
    ${1:var}=
    while getopts f:vql opt
    do
        case $opt in
        ${2:option})    $1=$OPTARG
                        ;;
        '?')            echo "\$0: 不正なオプションです。-$OPTARG" >&2
                        echo "Usage: \$0 ${3}">&2
                        exit 1
                        ;;
        esac
    done
    shift $((OPTIND - 1)) # Delete all options
    ${0:#:TARGET}
