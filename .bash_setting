#! /usr/bin/env bash
#####################################################################
#
# Simple Bash Setting
# Environmental setting is written in .bash_profile
#   echo 'export PATH="$HOME/.aaaa/bin:$PATH" >> ~/.bash_profile
#
#####################################################################

# Print Prompt
echo "############################################"
echo "Starting ${SHELL} Setting."
echo "############################################"

# Read functions
~/.dotfiles/shlib/run-with-color.sh

# Set Prompt
PS1='\[\e[1;36m\e[\][[\u@\h \w]\[\e[0m\] \n\$ '

# some more git aliases
alias gitsts='git status'
alias cls='clear'
alias ls='ls --color=auto'
alias grep='grep --color=auto'

export DISPLAY=localhost:0.0
export EDITOR=vim

# For Golang
export GOROOT=/usr/lib/go/
export GOPATH=$HOME/go
export PATH=$PATH:/usr/lib/go/bin
export PATH=$PATH:$GOPATH/bin

# For my shell command
export PATH=$PATH:~/.dotfiles/shlib/

echo "############################################"
echo "Shell Setting is finished!!!"
echo "############################################"
